extends layout

block links
  link(href="/viewer.css", rel="stylesheet", type="text/css")

block scripts
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js', type='text/javascript')
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery.transit/0.9.12/jquery.transit.js', type='text/javascript')
  script(src='//cdnjs.cloudflare.com/ajax/libs/knockout/3.2.0/knockout-min.js', type='text/javascript')

block content
  #viewer(data-bind="foreach: posts")
    .post.wait(data-bind="style: {backgroundImage: 'url('+$data+')'}")
  script(src='/viewer.js')
