extends layout

block links
	link(href="stylesheets/viewer.css", rel="stylesheet", type="text/css")

block scripts
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
	script(src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js")
	script(src="javascripts/viewer.js")

block content
	#viewer(data-bind="foreach: posts")
		.post.wait(data-bind="style: {backgroundImage: 'url('+photo_url+')'}")
		